
<article role="article" class="media columns">
    <div class="media-content column is-7">
        <div class="content">
            <h2 class="title"><a href="{{ record|link }}">{{ record|title }}</a></h2>

            {{ record.description }}

            <p class="meta">

                {% if record.packagist_type == 'bolt-theme' %}
                    <span class="tag is-warning">Theme</span>
                {% else %}
                    <span class="tag is-primary">Extension</span>
                {% endif %}

                Updated: {{ record.time_updated|localedatetime("%B %e, %Y") }}</p>

        </div>
    </div>
    <div class="media-right column">
        {% include 'partials/_screenshots.twig' with {'record': record} %}
    </div>

</article>